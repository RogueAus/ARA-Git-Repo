_color = "";
switch(_this select 0) do {
	case "green": {
		_color = "#1da000";
	};
	case "red": {
		_color = "#ff0000";
	};
	case "blue": {
		_color = "#00bfc9";
	};
	case "yellow": {
		_color = "#fffa00";
	};
	case "orange": {
		_color = "#ffbb00";
	};
	case "grey": {
		_color = "#666666";
	};
};

